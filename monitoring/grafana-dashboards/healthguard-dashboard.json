{
  "title": "HealthGuard Services Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "tags": ["healthguard", "services"],
  "uid": "healthguard-services",
  "panels": [
    {
      "id": 1,
      "title": "Service Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"incident-services\"}",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "DOWN", "color": "red"},
                "1": {"text": "UP", "color": "green"}
              }
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "Alerts Received (Total)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(alerts_received_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    },
    {
      "id": 3,
      "title": "Incidents Created (Total)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(incidents_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    }
  ],
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
