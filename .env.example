# HealthGuard Ops - Environment Configuration
# Copy this file to .env and update values for your environment

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

POSTGRES_DB=incident_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=hackathon2026
POSTGRES_HOST=database
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:hackathon2026@database:5432/incident_platform

# ==========================================
# SERVICE CONFIGURATION
# ==========================================

# Alert Ingestion Service
ALERT_INGESTION_PORT=8001
ALERT_SERVICE_URL=http://alert-ingestion:8001

# Incident Management Service
INCIDENT_MANAGEMENT_PORT=8002
INCIDENT_SERVICE_URL=http://incident-management:8002

# On-Call Service
ONCALL_SERVICE_PORT=8003
ONCALL_SERVICE_URL=http://oncall-service:8003

# Web UI
WEB_UI_PORT=8080
API_GATEWAY_URL=http://web-ui:8080

# ==========================================
# INFRASTRUCTURE CONFIGURATION
# ==========================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# Grafana
GRAFANA_PORT=3001
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false

# ==========================================
# EXTERNAL INTEGRATIONS (Optional)
# ==========================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#incident-alerts

# PagerDuty Integration
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==========================================
# MONITORING CONFIGURATION
# ==========================================

# Log Level
LOG_LEVEL=INFO

# Metrics Configuration
METRICS_PORT=9090
METRICS_ENABLED=true

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment
ENVIRONMENT=development  # development, staging, production

# API Configuration
API_TIMEOUT=30s
MAX_REQUEST_SIZE=10MB
REQUEST_LOG_ENABLED=true

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_TIMEOUT=30s

# ==========================================
# SECURITY (Only for Development!)
# ==========================================

# Note: Never commit actual secrets to git!
# Use proper secrets management in production

JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# ==========================================
# FEATURE FLAGS
# ==========================================

FEATURE_AUTO_ESCALATION=true
FEATURE_SLACK_INTEGRATION=false
FEATURE_PAGERDUTY_INTEGRATION=false
FEATURE_DETAILED_LOGGING=true
